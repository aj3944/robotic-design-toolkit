 #:kivy 1.0.9


<PotatoWindow>
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, 1
            height: '512dp'
            width: '512dp'
            Button:
                text: 'One'
                on_release: sm.current = 'screen_one'  #<<<<<<<<<<<<<<<<
            Button:
                text: 'Two'
                on_release: sm.current = 'screen_two'  #<<<<<<<<<<<<<<<<

        ScreenManager:
            id: sm
            Screen_One:
            Screen_Two:

<Screen_One>:
    name: 'screen_one'      #<<<<<<<<<<<<<<<<
    
    Button:
        text: 'One'

<Screen_Two>:
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 350

            Label:
                text: 'Fragment Shader'
                size_hint_y: None
                height: self.texture_size[1] + 10
            CodeInput:
                text: root.fs
                lexer: GLShaderLexer()
                on_text: root.fs = args[1]

            Label:
                text: 'Vertex Shader'
                size_hint_y: None
                height: self.texture_size[1] + 10
            CodeInput:
                text: root.vs
                lexer: GLShaderLexer()
                on_text: root.vs = args[1]

        ShaderViewer:
            id: viewer
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: root.source